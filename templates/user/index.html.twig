{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>LastName</th>
                <th>Job</th>
                <th>Town</th>
                <th>Link_Git</th>
                <th>Link_LinkedIn</th>
                <th>Description</th>
                <th>Skill</th>
                <th>Technology</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.Email }}</td>
                <td>{{ user.Password }}</td>
                <td>{{ user.Firstname }}</td>
                <td>{{ user.LastName }}</td>
                <td>{{ user.Job }}</td>
                <td>{{ user.Town }}</td>
                <td>{{ user.LinkGit }}</td>
                <td>{{ user.LinkLinkedIn }}</td>
                <td>{{ user.Description }}</td>
                <td>{{ user.Skill ? user.Skill|join(', ') : '' }}</td>
                <td>{{ user.Technology ? user.Technology|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
